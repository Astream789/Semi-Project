{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('book_list') }}" class="btn btn-default">Back to Book List</a>
    <hr/>
    <h2 class="page-header">{{ products.productName }}</h2>
    <ul class="list-group">
        <li class="list-group-item">Tag: {{ book.Tag }}</li>
        <li class="list-group-item">Due: <strong>{{ book.date|date('F j,Y, g:i a') }}</strong></li>
    </ul>
    <p>{{ products.description }}</p>
{% endblock %}
